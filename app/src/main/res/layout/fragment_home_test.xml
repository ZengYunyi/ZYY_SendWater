<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/title_homeTest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center"
            android:maxLength="16"
            android:transitionName="a10"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="50dp"
            android:src="@drawable/left_white"
            android:id="@+id/homeTest_top_back"/>

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/homeTest_image"
        android:src="@drawable/shoe"
        android:transitionName="a20"
        android:layout_margin="@dimen/dp_10"/>
    <TextView
        android:id="@+id/homeTest_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="16dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>