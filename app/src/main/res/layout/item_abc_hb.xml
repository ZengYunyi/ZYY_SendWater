    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/rv_abc_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无数据"
